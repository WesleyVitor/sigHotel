<%= turbo_frame_tag quarto do%>
    <tr>
      <td><%= link_to quarto.numero_quarto, quarto_path(quarto), data: {turbo_frame: "_top"} %></td>
      <td><%= quarto.max_hospedes%></td>
      <td><%= quarto.descricao%></td>
      <td><%= quarto.status%></td>
      <td><%= quarto.tipo_cama%></td>
      <td><%= quarto.tipo_caracteristica%></td>
      <% if policy(quarto).can_use_quarto?%>
        <td scope="col">
                    <button type="button" class="btn btn-warning"><%= link_to "Editar", edit_quarto_path(quarto), class: "text-decoration-none"%></button>
                    <button type="button" class="btn btn-danger"><%= link_to "Deletar", quarto_path(quarto),class: "text-decoration-none", data: {
                        turbo_method: :delete,  turbo_confirm: "VocÃª tem certeza?"
                    } %></button>
            </td>

      <%end%>
    </tr>
<%end%>